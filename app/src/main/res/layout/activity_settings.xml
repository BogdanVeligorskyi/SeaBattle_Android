<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <Switch
        android:id="@+id/switch_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UseSwitchCompatOrMaterialXml"
        android:layout_margin="25dp"
        android:textSize="18sp"
        android:text="Dark mode">
    </Switch>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:text="Your role:"
        android:textSize="18sp"
        android:layout_gravity="start"/>

    <RadioGroup
        android:id="@+id/role_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/hostButton_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Host"/>

        <RadioButton
            android:id="@+id/guestButton_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Guest"/>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4.0">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Host IP"
            android:textSize="18sp"
            android:layout_weight="2.0"
            android:textAlignment="center"/>

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Guest IP"
            android:textSize="18sp"
            android:layout_weight="2.0"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4.0">

        <EditText
            android:id="@+id/hostIP_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="192.168.0.101"
            android:textSize="18sp"
            android:layout_weight="2.0"
            android:textAlignment="center"
            android:inputType="number"/>

        <EditText
            android:id="@+id/guestIP_id"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="192.168.0.102"
            android:textSize="18sp"
            android:layout_weight="2.0"
            android:textAlignment="center"
            android:inputType="number"/>

    </LinearLayout>

    <Button
        android:id="@+id/saveSettings_id"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:minWidth="110dp"
        android:minHeight="60dp"
        android:layout_gravity="bottom|center_horizontal"
        android:text="Save"/>

</LinearLayout>